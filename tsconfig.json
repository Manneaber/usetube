{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": false,
    "target": "ES2018",
    "lib": ["ES2018", "DOM", "DOM.Iterable", "ScriptHost"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./dist",
    "./test"
  ]
}
